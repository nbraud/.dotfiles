[push]
	default = current

[hub]
	protocol = https

[alias]
	br  = branch
	ci  = commit
	co  = checkout
	ff  = merge --ff-only
	fix = commit --amend --no-edit
	st  = status

[core]
	attributesFile = ~/.config/git/attributes
	excludesfile   = ~/.config/git/ignore
	whitespace = trailing-space,space-before-tab,tabwidth=4

[init]
	templateDir = ~/.config/git/template/

[advice]
	pushNonFastForward = false
	statusHints = false

[diff]
	renames = copies
	mnemonicprefix = true

[branch]
	autosetupmerge = true

[diff "gpg"]
	textconv = gpg --no-tty --decrypt
	cachetextconv = false
[diff "ansible-vault"]
	textconv = ansible-vault view
	cachetextconv = false

[merge]
	ff = no
[pull]
	ff = only
[rebase]
	autosquash = on
	autostash = on

