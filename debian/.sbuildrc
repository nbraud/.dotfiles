# ~/.sbuildrc.  (Also see /etc/sbuild/sbuild.conf.)  -*- Perl -*-


##
## DPKG-BUILDPACKAGE OPTIONS
##

$source_only_changes = 1;

# PGP-related option to pass to dpkg-buildpackage. Usually neither .dsc
# nor .changes files shall be signed automatically.
$pgp_options = ['-us', '-uc'];

# Build Architectures: all packages
$build_arch_all = 1;


##
## SBUILD BEHAVIOUR
##

# Default distribution.
$distribution = 'unstable';

# When to purge the build directory afterwards; possible values are "never",
# "successful", and "always"
$purge_build_directory="always";


##
## QA tools
##

# lintian
$run_lintian = 1;
$lintian_opts = ['-i', '-I'];

# piuparts
#$run_piuparts = 1;
#$piuparts_opts = ['--schroot', 'unstable-amd64-piuparts'];


## don't remove this, Perl needs it:
1;
